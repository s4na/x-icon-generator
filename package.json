{
  "name": "x-icon-generator",
  "version": "1.0.0",
  "description": "X Profile Icon Generator - Optimize profile icons for circular display",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm test && npm run test:e2e",
    "playwright:install": "playwright install --with-deps"
  },
  "keywords": [
    "x",
    "twitter",
    "icon",
    "generator",
    "profile",
    "avatar"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@vitest/ui": "^2.1.8",
    "happy-dom": "^15.11.7",
    "vitest": "^2.1.8"
  }
}
